{{#if resume.work.length}}
<section class="section">
  <header>
    <h2 class='section-title'>Exp√©riences professionelles <span class="item-count">({{soustraction resume.work.length 0}})</span></h2>
  </header>

  <section id="work">
    {{#each resume.work}}

      {{#if breakBefore}}
        <section class="item page-break"> </section>
      {{else}}
        <section class="work-item">
          {{#if name}}

          {{#if summary}}
          <label for="work-item-{{@index}}"></label>
          {{/if}}

          <header class="clear">
            {{> date startDate=startDate endDate=endDate }}
            {{#if position}}
            <div class="position">{{position}}</div>
            {{/if}}
            <div class="company">{{name}}</div>
          </header>
          {{/if}}

          {{#if location}}
          <span class="fa-solid fa-location-dot"></span>
          <span class="location">{{location}}</span>
          {{/if}}
          {{#if url}}
          <span class="url">
            <span class="fa-solid fa-up-right-from-square"></span>
            <a target="_blank" href="{{url}}">{{url}}</a>
          </span> {{/if}} {{#if keywords.length}}
          <ul class="keywords">
            {{#each keywords}}
            <li>{{.}}</li>
            {{/each}}
          </ul>
          {{/if}}
          <div class="item" id="work-item">
            {{#if summary}}
            <div class="summary">{{paragraphSplit summary}}</div>
            {{/if}}
            {{#if highlights.length}}
            <ul class="highlights">
              {{#each highlights}}
              <li>{{paragraphSplit .}}</li>
              {{/each}}
            </ul>
            {{/if}}
          </div>
        </section>
      {{/if}}

    {{/each}}
  </section>
</section>
{{/if}}
